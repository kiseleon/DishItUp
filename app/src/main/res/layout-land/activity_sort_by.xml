<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cs246.dishitup.SortBy">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/mainMenu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Name a-z"
        android:id="@+id/NameAZ"
        android:layout_above="@+id/NameZA"
        android:layout_alignLeft="@+id/Rating"
        android:layout_alignStart="@+id/Rating" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameZA"
        android:text="Name Z-a"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/NameAZ"
        android:layout_alignStart="@+id/NameAZ" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rating"
        android:id="@+id/Rating"
        android:layout_below="@+id/mainMenu"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time short to long"
        android:id="@+id/TimeSl"
        android:layout_above="@+id/TimeLs"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time long to short"
        android:id="@+id/TimeLs"
        android:layout_above="@+id/BackToSearch"
        android:layout_alignLeft="@+id/TimeSl"
        android:layout_alignStart="@+id/TimeSl" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to search"
        android:id="@+id/BackToSearch"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
