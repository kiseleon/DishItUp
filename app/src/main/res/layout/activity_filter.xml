<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cs246.dishitup.Filter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how much time do you have?"
        android:id="@+id/tHowMuchTime"
        android:layout_above="@+id/TIngredient"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what is the main ingredient?"
        android:id="@+id/TIngredient"
        android:layout_marginBottom="101dp"
        android:layout_above="@+id/TCategory"
        android:layout_alignLeft="@+id/tHowMuchTime"
        android:layout_alignStart="@+id/tHowMuchTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What category?"
        android:id="@+id/TCategory"
        android:layout_marginBottom="103dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/mainMenu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/STime"
        android:layout_alignTop="@+id/tHowMuchTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SIngredient"
        android:layout_above="@+id/TCategory"
        android:spinnerMode="dropdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Scategory"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown" />

</RelativeLayout>
