<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/food" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="launchSearch"
        android:id="@+id/searchButton"
        android:layout_marginTop="48dp"
        android:maxWidth="200dp"
        android:nestedScrollingEnabled="false"
        android:minWidth="200dp"
        android:layout_alignRight="@+id/recentlyViewedButton"
        android:layout_alignEnd="@+id/recentlyViewedButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Viewed"
        android:onClick=""
        android:id="@+id/recentlyViewedButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:minWidth="200dp"
        android:maxWidth="200dp"
        android:layout_below="@+id/searchButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Recipe"
        android:id="@+id/addRecipeButton"
        android:onClick="launchAddNewRecipe"
        android:layout_below="@+id/recentlyViewedButton"
        android:layout_alignLeft="@+id/recentlyViewedButton"
        android:layout_alignStart="@+id/recentlyViewedButton"
        android:layout_marginTop="48dp"
        android:layout_alignRight="@+id/recentlyViewedButton"
        android:layout_alignEnd="@+id/recentlyViewedButton"
        android:maxWidth="200dp"
        android:minWidth="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display recipe"
        android:id="@+id/displayR"
        android:onClick="displayRecipe"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
