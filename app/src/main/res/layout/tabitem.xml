<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:background="#ffd2c5ab">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID goes here"
        android:id="@+id/idTab"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_weight="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:id="@+id/nameTab"
            android:textSize="25sp"
            android:layout_weight="3"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Time"
                android:id="@+id/timeTab"
                android:layout_weight="1"
                android:textColor="#ff5f5f5f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe rating"
                android:id="@+id/ratingTab"
                android:layout_weight="1"
                android:textColor="#ff5f5f5f" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/imageTab"
        android:contentDescription="Recipe Image"
        android:src="@drawable/placeholder_image"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_weight="1" />



</LinearLayout>